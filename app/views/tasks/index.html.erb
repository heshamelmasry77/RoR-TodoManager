<%= link_to('Back to Home page', { controller: 'main', action: 'index' }) %> <br/>

<h1>Tasks</h1>
<%= link_to('First Task', tasks_path(1)) %>
<%= link_to("Add New Task", new_task_path, class: 'action new') %>
<table>
  <tr class="header">
    <th>
      #
    </th>
    <th>Task</th>
    <th>Completed</th>
    <th>Category</th>
    <th>Actions</th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.position %></td>
      <td><%= task.name %></td>
      <td>
        <%= task.completed? ? 'Yes' : 'No' %>
      </td>
      <td><%= task.category&.name || '-' %></td>
      <td class="actions">
        <%= link_to("Show", task_path(task), class: "action show") %>
        <%= link_to("Edit", "#", class: "action edit") %>
        <%= link_to("Delete", "#", class: "action delete") %>
      </td>
    </tr>
  <% end %>
</table>